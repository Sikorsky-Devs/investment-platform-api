generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id         String  @id @default(uuid())
  email      String  @unique
  username   String  @unique
  password   String
  role       Role    @default(USER)
  avatarLink String? @map("avatar_link")

  @@map("users")
}
